<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane styleClass="main-view" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tdf.controllers.DashboardController">
   <children>
      <BorderPane>
         <center>
            <ScrollPane fx:id="dashboardScrollPane" fitToHeight="true" fitToWidth="true" styleClass="scroll-pane">
               <content>
                  <GridPane fx:id="widgetPane" hgap="20.0" vgap="20.0">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </GridPane>
               </content>
            </ScrollPane>
         </center>
         <bottom>
            <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="modifyLayoutButton" onAction="#handleModifyLayout" styleClass="cancel-button" text="Modify Layout" />
                  <Button fx:id="smallAddButton" onAction="#handleAddWidgets" styleClass="ud-button" text="Add Widgets" />
               </children>
               <padding>
                  <Insets bottom="15.0" right="15.0" />
               </padding>
            </HBox>
         </bottom>
      </BorderPane>
      <VBox fx:id="welcomePane" alignment="CENTER" managed="false" spacing="20.0" visible="false">
         <children>
            <Label styleClass="h1" text="Welcome to Your Trading Wizard" />
            <Button onAction="#handleAddWidgets" styleClass="standard-button" text="Add Widgets to Dashboard" />
         </children>
      </VBox>
   </children>
</StackPane>
