<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="main-view" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tdf.controllers.AddExampleController">
   <top>
      <StackPane>
         <children>
            <Label fx:id="titleLabel" styleClass="h1" text="Add New Example" StackPane.alignment="CENTER" />
            <Button onAction="#handleBack" styleClass="back-button" text="&lt; Back">
               <StackPane.margin>
                  <Insets left="20.0" />
               </StackPane.margin>
            </Button>
         </children>
         <padding>
            <Insets top="20.0" />
         </padding>
      </StackPane>
   </top>
   <center>
      <VBox alignment="TOP_CENTER" spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fx:id="imageView" fitHeight="300.0" fitWidth="500.0" pickOnBounds="true" preserveRatio="true" />
            <Button onAction="#handleSelectImage" styleClass="standard-button" text="Select Screenshot File" />
            <Label text="Tags (comma separated):" />
            <TextField fx:id="tagsField" maxWidth="500.0" />
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Button onAction="#addAPlusTag" styleClass="tag-button-a-plus" text="A+" />
                  <Button onAction="#addATag" styleClass="tag-button-a" text="A" />
                  <Button onAction="#addBPlusTag" styleClass="tag-button-b-plus" text="B+" />
                  <Button onAction="#addCPlusTag" styleClass="tag-button-c-plus" text="C+" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets top="20.0" />
         </padding>
      </VBox>
   </center>
   <bottom>
      <Button onAction="#handleSave" styleClass="standard-button" text="Add Example" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="20.0" />
         </BorderPane.margin>
      </Button>
   </bottom>
</BorderPane>