<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="main-view" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tdf.controllers.SetupDetailController">
   <top>
      <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="setupNameLabel" styleClass="h1" text="Setup Name" />
            <Button onAction="#handleBack" styleClass="standard-button" text="&lt; Back to Setups List" />
         </children>
         <padding>
            <Insets top="20.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <VBox alignment="TOP_CENTER" spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Description:" styleClass="h3" />
            
            <!-- Modified description container -->
            <VBox fx:id="descriptionContainer" spacing="5.0">
               <TextArea fx:id="descriptionArea" prefHeight="150.0" wrapText="true" />
               <HBox alignment="BOTTOM_RIGHT">
                  <Pane HBox.hgrow="ALWAYS" />
                  <Button fx:id="editDescriptionButton" onAction="#handleEditDescription" styleClass="icon-button" text="Edit">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="saveDescriptionButton" onAction="#handleSaveDescription" styleClass="standard-button" text="Save" />
               </HBox>
            </VBox>
            
            <HBox alignment="CENTER" spacing="50.0">
               <children>
                  <Button onAction="#showLostSetups" styleClass="exit-button" text="Lost Setups" />
                  <Button onAction="#showWonSetups" styleClass="standard-button" text="Won Setups" />
               </children>
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="50.0" right="50.0" top="20.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>