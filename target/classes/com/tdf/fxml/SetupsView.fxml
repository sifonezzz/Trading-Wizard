<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane styleClass="main-view" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tdf.controllers.SetupsViewController">
   <top>
      <VBox alignment="CENTER">
         <children>
            <Label styleClass="h1" text="Setups Samples">
               <padding>
                  <Insets top="20.0" />
               </padding>
            </Label>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <TextField fx:id="searchField" promptText="Search setups..." HBox.hgrow="ALWAYS" />
                  <ComboBox fx:id="sortComboBox" promptText="Sort By" />
                  <ToggleButton fx:id="showArchivedToggle" text="Show Archived" />
                  <Button fx:id="layoutToggleButton" styleClass="icon-button">
                     <graphic>
                        <FontIcon iconLiteral="fas-list" />
                     </graphic>
                  </Button>
               </children>
               <padding>
                  <Insets left="20.0" right="20.0" top="15.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <StackPane>
         <children>
            <ScrollPane fx:id="gridScrollPane" fitToWidth="true" styleClass="scroll-pane">
               <content>
                  <FlowPane fx:id="setupsPane" hgap="20.0" vgap="20.0">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </FlowPane>
               </content>
            </ScrollPane>
            <ScrollPane fx:id="listScrollPane" fitToWidth="true" styleClass="scroll-pane" visible="false">
               <content>
                  <VBox fx:id="setupsVBox" spacing="10.0">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </VBox>
               </content>
            </ScrollPane>
            <VBox fx:id="emptyStatePane" alignment="CENTER" maxHeight="150.0" maxWidth="400.0" spacing="15.0" styleClass="note-box" visible="false">
               <children>
                  <Label styleClass="h2" text="No Setups Found" />
                  <Label styleClass="note-text" text="Try adjusting your filters or add a new setup." />
               </children>
            </VBox>
         </children>
      </StackPane>
   </center>
   <bottom>
      <HBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Button onAction="#handleAddSetup" styleClass="standard-button" text="Add New Setup" />
         </children>
         <padding>
            <Insets bottom="20.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>